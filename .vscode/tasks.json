{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "devBuild",
      "problemMatcher": [
        "$eslint-compact"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "start",
      "problemMatcher": [
        "$eslint-compact"
      ]
    },
    {
      "type": "npm",
      "script": "prodStart",
      "problemMatcher": [
        "$eslint-compact"
      ]
    },
    {
			"type": "npm",
			"script": "eslint .",
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "label": "eslint: lint whole folder"
    }
  ]
}
